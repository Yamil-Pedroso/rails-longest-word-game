<h1 style="text-align: center;">Welcome to Random Letters!</h1>

<div class="container">
  <% @letters.split("").each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>

<h3>What is the longest word you can find?</h3>
<form action="/score" method="post" data-turbo="false">
  <input class="input-field" type="text" name="score" value="<%= params[:score] %>">
  <input class="play-btn" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
